<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.clinicadesktop.controllers.LoginController"
            prefWidth="400" prefHeight="300">

    <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="50" prefWidth="300" prefHeight="200" AnchorPane.leftAnchor="50" AnchorPane.topAnchor="50">

        <Label text="Login" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

        <TextField fx:id="usernameField" promptText="Username" />
        <PasswordField fx:id="passwordField" promptText="Password" />

        <Button text="Entrar" onAction="#login" prefWidth="100" />

    </VBox>
</AnchorPane>
